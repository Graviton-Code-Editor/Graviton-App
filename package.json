{
  "name": "Graviton",
  "version": "1.2.0",
  "description": "Graviton is a simple code editor.",
  "main": "main.js",
  "repository": "https://github.com/Graviton-Code-Editor/Graviton-App",
  "scripts": {
    "start": "electron . Graviton ",
    "start:no.sandbox": "electron . Graviton --no-sandbox",
    "pack": "build --dir",
    "build": "build",
    "build:snap": "build --linux snap",
    "build:win": "build --win",
    "build:win32": "build --win --ia32",
    "build:win:linux": "build --linux && build --win ",
    "rebuild": "electron-rebuild -f -w node-pty",
    "standard": "standard --fix",
    "test": "mocha test"
  },
  "standard": {
    "ignore": [
      "/node_modules",
      "/build",
      "/dist",
      "/languages"
    ]
  },
  "keywords": [
    "Graviton",
    "Editor",
    "code",
    "open source",
    "modern"
  ],
  "author": "Marc Espin Sanz <mespinsanz@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "appdata-path": "^1.0.0",
    "codemirror": "^5.48.2",
    "degit": "^2.1.4",
    "fs-extra": "^7.0.1",
    "marked": "^0.7.0",
    "mousetrap": "^1.6.3",
    "node-pty": "^0.9.0-beta24",
    "npm": "^6.10.1",
    "octonode": "^0.9.5",
    "request": "^2.88.0",
    "rimraf": "^2.6.3",
    "semver": "^6.3.0",
    "tinycolor2": "^1.4.1",
    "xterm": "^3.14.5"
  },
  "devDependencies": {
    "electron": "^6.0.0",
    "electron-builder": "^20.44.4",
    "electron-rebuild": "^1.8.5",
    "mocha": "^6.2.0",
    "spectron": "^7.0.0",
    "standard": "^12.0.1"
  },
  "build": {
    "appId": "graviton-editor",
    "artifactName": "${name}-${version}-${arch}-${platform}.${ext}",
    "icon": "assets/mac/icon.png",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "assets/linux"
    },
    "win": {
      "target": "NSIS",
      "icon": "assets/win/icon.ico"
    }
  }
}
